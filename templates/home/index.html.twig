{% extends 'base.html.twig' %}

{% block body %}
<main>
    <section class="rubrique d-flex flex-column" id="concept">
        <div class="row">
            <div class="d-flex flex-column justify-content-center bg-primary text-light py-4">
                <h4 class="text-center mb-2">Captain Pizza</h4>
                <p class="text-center mb-2">Pizzas artisanales cuites au feu de bois</p>
                <p class="text-center mb-2">À emporter à Maureillas ou en livraison dans le Bas-Vallespir</p>
                <p class="text-center mb-0">Commande au <a class="text-light" href="tel:+33611418444">06 11 41 84 44</a></p>
            </div>
        </div>
        <div class="row">
            <aside class="col-4 d-flex flex-column justify-content-center p-0">
                <img src="../img/logo.jpg" class="img-fluid" alt="Logo Captain Pizza">
            </aside>
            <article class="col-8 d-flex flex-column justify-content-center p-0">
                <img src="../img/pizza_feu_de_bois_resized.jpg" class="img-fluid" alt="Pizza dans un four à bois" id="pizzaFeuBois">
            </article>
        </div>
    </section>
    <section class="rubrique vh-100 d-flex flex-column bg-primary" id="carte">
        <h2 class="text-center text-light pt-3">Carte</h2>
        <ul class="nav nav-pills d-flex justify-content-center my-4" id="carteTabs" role="tablist">
            <li class="nav-item me-4 p-0" role="presentation">
                <button class="nav-link rounded-pill text-light active" id="white-pizzas-tab" data-bs-toggle="tab" data-bs-target="#white-pizzas-tab-pane" type="button" role="tab" aria-controls="white-pizzas-tab-pane" aria-selected="true">Pizzas blanches</button>
            </li>
            <li class="nav-item mx-4 p-0" role="presentation">
                <button class="nav-link rounded-pill text-light" id="red-pizzas-tab" data-bs-toggle="tab" data-bs-target="#red-pizzas-tab-pane" type="button" role="tab" aria-controls="red-pizzas-tab-pane" aria-selected="false">Pizzas rouges</button>
            </li>
            <li class="nav-item ms-4 p-0" role="presentation">
                <button class="nav-link rounded-pill text-light" id="drinks-tab" data-bs-toggle="tab" data-bs-target="#drinks-tab-pane" type="button" role="tab" aria-controls="drinks-tab-pane" aria-selected="false">Boissons</button>
            </li>
        </ul>
        <div class="tab-content d-flex justify-content-center" id="carteTabsContent">
            <div class="tab-pane fade show active" id="white-pizzas-tab-pane" role="tabpanel" aria-labelledby="white-pizzas-tab" tabindex="0">
                <ul>
                    <li class="row mt-4">
                        <h4 class="text-center text-light">Chèvre miel <i class="icofont-leaf"></i></h4>
                        <div class="d-flex justify-content-between">
                            <p class="text-light">Base crème fraîche, fromage de chèvre, miel, pignons</p>
                            <p class="text-light">9 €</p>
                        </div>
                    </li>
                    <li class="row mt-4">
                        <h4 class="text-center text-light">Forestière <i class="icofont-clock-time"></i></h4>
                        <div class="d-flex justify-content-between">
                            <p class="text-center text-light">Base crème fraîche, comté, champignons de Paris, lardons</p>
                            <p class="text-light">10 €</p>
                        </div>
                    </li>
                    <li class="row mt-4">
                        <h4 class="text-center text-light">3 fromages <i class="icofont-heart"></i></h4>
                        <div class="d-flex justify-content-between">
                            <p class="text-center text-light">Base crème fraîche, mozzarella, roquefort, fromage de chèvre</p>
                            <p class="text-light">10 €</p>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="tab-pane fade" id="red-pizzas-tab-pane" role="tabpanel" aria-labelledby="red-pizzas-tab" tabindex="0">
                <ul>
                    <li class="row mt-4">
                        <h4 class="text-center text-light">Diablesse <i class="icofont-fire-alt"></i></h4>
                        <div class="d-flex justify-content-between">
                            <p class="text-center text-light">Base sauce tomate, mozzarella, piment, poivrons, chorizo</p>
                            <p class="text-light">10 €</p>
                        </div>
                    </li>
                    <li class="row mt-4">
                        <h4 class="text-center text-light">Hawaïenne <i class="icofont-not-allowed"></i></h4>
                        <div class="d-flex justify-content-between">
                            <p class="text-center text-light">De l'ananas dans une pizza ? Personne ne mange ça, c'est interdit !</p>
                            <p class="text-light">100000000000 €</p>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="tab-pane fade" id="drinks-tab-pane" role="tabpanel" aria-labelledby="drinks-tab" tabindex="0">
                <ul>
                    <li class="row mt-4">
                        <h4 class="text-center text-light">Coca Cola</h4>
                        <div class="d-flex justify-content-between">
                            <p class="text-center text-light">Bouteille de 1L</p>
                            <p class="text-light">2 €</p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <p class="text-center text-light">Bouteille de 2L</p>
                            <p class="text-light">3 €</p>
                        </div>
                    </li>
                    <li class="row mt-4">
                        <h4 class="text-center text-light">Bières</h4>
                        <div class="d-flex justify-content-between">
                            <p class="text-center text-light">Chez Rémy blanche (25cL)</p>
                            <p class="text-light">5 €</p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <p class="text-center text-light">Chez Rémy blonde (25cL)</p>
                            <p class="text-light">4 €</p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <p class="text-center text-light">Chez Rémy ambrée (25cL)</p>
                            <p class="text-light">6 €</p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <p class="text-center text-light">Chez Rémy brune (25cL)</p>
                            <p class="text-light">4 €</p>
                        </div>
                    </li>
                    <li class="row mt-4">
                        <h4 class="text-center text-light">Vin</h4>
                        <div class="d-flex justify-content-between">
                            <p class="text-center text-light">Bouteille de 25cL</p>
                            <p class="text-light">4 €</p>
                        </div>
                        <div class="d-flex justify-content-between">
                            <p class="text-center text-light">Bouteille de 75cL</p>
                            <p class="text-light">8 €</p>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </section>
</main>
{% endblock %}
